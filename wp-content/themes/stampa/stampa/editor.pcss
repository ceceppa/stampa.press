@import '../postcss/variables.pcss';
@import './postcss/editor/home-hero.pcss';

#editor {
  .home-hero {
    font-family: 'Lato', sans-serif;
    font-size: 18px;

    &__intro {
      max-width: none;
    }

    .editor-rich-text {
      max-width: 864px;
      margin: 0 auto;
    }

    p {
