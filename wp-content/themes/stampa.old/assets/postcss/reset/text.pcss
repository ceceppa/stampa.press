/**
 * Text resets.
 */

p,
ul,
ol {
  margin: 1em 0;

  &:first-child {
    margin-top: 0;
  }

  &:last-child {
    margin-bottom: 0;
  }
}

ul,
ol {
  padding-left: 1.1em;
}

h1,
h2,
h3,
h4,
h5,
h6,
.h1,
.h2,
.h3,
.h4,
.h5,
.h6 {
  @extend .heading;
}

address {
  font-style: normal;
}

strong {
  font-weight: bold;
}

em {
  font-style: italic;
}
