/**
 * Table elements resets.
 */

tr,
th,
td,
table,
thead,
tfoot,
tbody {
  border: 0;
  margin: 0;
  padding: 0;
  font-size: 100%;
  vertical-align: baseline;
}

table {
  border: 1px solid rgba(0, 0, 0, 0.2);
  border-collapse: separate;
  border-spacing: 0;
  max-width: 100%;
  width: 100%;
}

th, td {
  padding: .75rem;
}

tr:last-child td {
  border-bottom: 0;
}

th {
  text-align: left;
  font-weight: 600;
  vertical-align: bottom;
  border-bottom: 1px solid rgba(0, 0, 0, 0.2);
}
