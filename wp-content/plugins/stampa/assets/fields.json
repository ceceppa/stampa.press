[
  {
    "group": "Stampa",
    "id": "heading",
    "data": {
      "label": "Heading",
      "tooltip": "Heading",
      "icon": "heading.svg",
      "html": "<{level}>{placeholder}</{level}>",
      "className": "wp-block-heading",
      "gutenberg": {
        "block": "TextControl",
        "react": [
          "<{{stampa.value.level}}",
          " className=\"stampa-field\"",
          " style={{gridRowStart: {{stampa.grid_row_start}}, gridColumnStart: {{stampa.grid_column_start}}, gridRowEnd: {{stampa.grid_row_end}}, gridColumnEnd: {{stampa.grid_column_end}}}}>",
          "<textarea type='text' className='stampa-field__height'",
          " value={attributes.{{stampa.field_name}}}",
          " placeholder='{{stampa.value.placeholder}}'",
          " onChange={e => updateAttribute('{{stampa._field_name}}', e.value)}",
          "/>",
          "</{{stampa.value.level}}>"
        ]
      },
      "options": [
        {
          "name": "level",
          "type": "select",
          "label": "Level",
          "values": ["h1", "h2", "h3", "h4", "h5", "h6"],
          "value": "h2"
        },
        {
          "name": "placeholder",
          "type": "text",
          "label": "Placeholder",
          "value": "Heading"
        }
      ]
    }
  },
  {
    "group": "Gutenberg",
    "id": "text",
    "data": {
      "label": "Text",
      "tooltip": "Simple text input field. (<PlainText />)",
      "help": "https://github.com/WordPress/gutenberg/tree/master/packages/block-editor/src/components/plain-text",
      "icon": "input.svg",
      "html": "{placeholder}",
      "options": [
        {
          "name": "placeholder",
          "type": "text",
          "label": "Placeholder",
          "value": "Write text..."
        }
      ],
      "gutenberg": {
        "block": "Heading",
        "react": [
          "<PlainText",
          " gridArea={{gridArea}}",
          " value={ `fieldName` }",
          "onChange={ this.`onFieldNameChanged }",
          "/>"
        ]
      }
    }
  },
  {
    "group": "Gutenberg",
    "id": "wysiwyg",
    "data": {
      "label": "Paragraph",
      "tooltip": "WYSIWYG Editor (<RichText />)",
      "help": "https://github.com/WordPress/gutenberg/tree/master/packages/block-editor/src/components/rich-text",
      "icon": "wysiwyg.svg",
      "html": "{placeholder}",
      "options": [
        {
          "name": "placeholder",
          "type": "text",
          "label": "Placeholder",
          "value": "Write text..."
        }
      ],
      "gutenberg": {
        "block": "Paragraph",
        "react": [
          "<RichText",
          " gridArea={{gridArea}}",
          " value={ `fieldName` }",
          "onChange={ this.`onFieldNameChanged }",
          "/>"
        ]
      }
    }
  },
  {
    "group": "Gutenberg",
    "id": "button",
    "data": {
      "label": "Button",
      "tooltip": "Button field",
      "icon": "button.svg",
      "className": "wp-block-button",
      "html": "<div class='wp-block-button__link'>{placeholder}</div>",
      "options": [
        {
          "name": "placeholder",
          "type": "text",
          "label": "Placeholder",
          "value": "Add text..."
        }
      ],
      "gutenberg": {
        "block": "PlainText",
        "react": [
          "<PlainText",
          " gridArea={{gridArea}}",
          " value={ `fieldName` }",
          "onChange={ this.`onFieldNameChanged }",
          "/>"
        ]
      }
    }
  }
]
