{
  "group": "Fields",
  "id": "heading",
  "data": {
    "label": "Heading",
    "tooltip": "Heading",
    "icon": "heading.svg",
    "html": "<{level}>{placeholder}</{level}>",
    "contentClassName": "wp-block-heading",
    "defaultSize": {
      "rows": 1,
      "columns": 3
    },
    "options": [
      {
        "name": "level",
        "type": "select",
        "label": "Level",
        "values": ["h1", "h2", "h3", "h4", "h5", "h6"],
        "value": "h2"
      },
      {
        "name": "placeholder",
        "type": "text",
        "label": "Placeholder",
        "value": "Heading"
      }
    ]
  },
  "gutenberg": {
    "attribute_type": "string",
    "react": [
      "<{{stampa.value.level}}",
      " className=\"stampa-field stampa-field--heading field--{{stampa.field_name}}\"",
      " style={{gridRowStart: {{stampa.grid_row_start}}, gridColumnStart: {{stampa.grid_column_start}}, gridRowEnd: {{stampa.grid_row_end}}, gridColumnEnd: {{stampa.grid_column_end}}}}>",
      "<textarea type='text'",
      " value={attributes.{{stampa.field_name}}}",
      " placeholder='{{stampa.value.placeholder}}'",
      " rows='1'",
      " onChange={e => updateAttribute('{{stampa.field_name}}', e.target.value)}",
      "/>",
      "</{{stampa.value.level}}>"
    ]
  },
  "php": "<{{stampa.value.level}} class='{{stampa.block_css_class_name}}__{{stampa.field_name}}'><?= ${{stampa.field_name}} ?></{{stampa.value.level}}>"
}
