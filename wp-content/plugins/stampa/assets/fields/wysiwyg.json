{
  "group": "Fields",
  "id": "wysiwyg",
  "data": {
    "label": "WYSIWYG",
    "tooltip": "WYSIWYG Editor (<RichText />)",
    "help": "https://github.com/WordPress/gutenberg/tree/master/packages/block-editor/src/components/rich-text",
    "icon": "wysiwyg.svg",
    "html": "{placeholder}",
    "defaultSize": {
      "rows": 3,
      "columns": 5
    },
    "options": [
      {
        "name": "placeholder",
        "type": "text",
        "label": "Placeholder",
        "value": "Write text..."
      }
    ]
  },
  "gutenberg": {
    "wp_editor": "RichText",
    "attribute_type": "string",
    "react": [
      "<div",
      " className=\"stampa-field stampa-field--wysiwyg field--{{stampa.field_name}}\"",
      " style={{gridRowStart: {{stampa.grid_row_start}}, gridColumnStart: {{stampa.grid_column_start}}, gridRowEnd: {{stampa.grid_row_end}}, gridColumnEnd: {{stampa.grid_column_end}}}}",
      ">",
      "<RichText",
      " placeholder='{{stampa.value.placeholder}}'",
      " value={attributes.{{stampa.field_name}}}",
      "onChange={value => updateAttribute('{{stampa.field_name}}', value)}",
      "/>",
      "</div>"
    ]
  },
  "php": "<div class='{{stampa.block_css_class_name}}__{{stampa.field_name}}'><?= ${{stampa.field_name}} ?></div>"
}
