{
  "group": "Fields",
  "id": "text",
  "data": {
    "label": "Text",
    "tooltip": "Simple text input field. (<PlainText />)",
    "help": "https://github.com/WordPress/gutenberg/tree/master/packages/block-editor/src/components/plain-text",
    "icon": "input.svg",
    "html": "{placeholder}",
    "defaultSize": {
      "rows": 3,
      "columns": 5
    },
    "options": [
      {
        "name": "placeholder",
        "type": "text",
        "label": "Placeholder",
        "value": "Write text..."
      }
    ]
  },
  "gutenberg": {
    "wp_components": "TextareaControl",
    "attribute_type": "string",
    "react": [
      "<div",
      " className=\"stampa-field stampa-field--textarea field--{{stampa.field_name}}\"",
      " style={{gridRowStart: {{stampa.grid_row_start}}, gridColumnStart: {{stampa.grid_column_start}}, gridRowEnd: {{stampa.grid_row_end}}, gridColumnEnd: {{stampa.grid_column_end}}}}>",
      "<TextareaControl",
      " value={attributes.{{stampa.field_name}}}",
      " placeholder='{{stampa.value.placeholder}}'",
      " onChange={value => updateAttribute('{{stampa.field_name}}', value)}",
      "/>",
      "</div>"
    ]
  },
  "php": "<div class='{{stampa.block_css_class_name}}__{{stampa.field_name}}'><?php echo $block_data['{{stampa.field_name}}'] ?></div>"
}
