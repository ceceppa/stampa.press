.stampa {
  display: flex;
  width: 100%;
  height: 100%;
  background: var(--white);
  margin-top: 20px;
  color: #555d66;

  &__left,
  &__right {
    width: 300px;
    min-width: 300px;
    width: 300px;
    min-width: 300px;
  }

  &__left {
    border-right: 1px solid var(--border);
  }

  &__right {
    border-left: 1px solid var(--border);
  }

  &-grid {
    flex-grow: 1;
  }

  &__content {
    padding: 16px;
  }

  &__border--bottom {
    border-bottom: 1px solid var(--border);
  }
}
