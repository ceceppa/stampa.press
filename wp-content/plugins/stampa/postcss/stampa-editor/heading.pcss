.stampa-field {
  &--heading {
    h2 {
      margin: 0;
      font-size: inherit;
      color: inherit;
      height: 100%;

      &::before {
        display: none !important;
      }
    }

    textarea {
      font-size: inherit;
      color: inherit;
      text-align: inherit;
    }

    .stampa-block & {
      font-size: 1rem;
      padding: 0;
      margin: 0;
    }
  }
}